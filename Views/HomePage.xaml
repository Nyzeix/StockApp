<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockApp.Views.HomePage"
             Title="Accueil"
             BackgroundColor="{AppThemeBinding Light={DynamicResource WhiteBrush}, Dark={DynamicResource BlackBrush}}">

    <ContentPage.Resources>
        <Style x:Key="labelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource LightTextColor-100}, Dark={DynamicResource DarkTextColor-100}}"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="DÃ©connexion"
                     IconImageSource="icon_logout.png"
                     Order="Primary"
                     Priority="0"
                     Clicked="OnLogoutClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout
            x:Name="MainLayout"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="30">

            <!-- Carte Stock Produits -->
            <Border
                BackgroundColor="{AppThemeBinding Light={DynamicResource LightPrimaryColor-400}, Dark={DynamicResource DarkPrimaryColor-400}}"
                Stroke="{AppThemeBinding Light={DynamicResource LightSecondaryColor-100}, Dark={DynamicResource DarkSecondaryColor-300}}"
                x:Name="StockCard"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 16"
                Padding="20"
                WidthRequest="250"
                HeightRequest="150"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <VerticalStackLayout Spacing="8"
                                     HorizontalOptions="Center"
                                     VerticalOptions="CenterAndExpand">
                    <Image Source="icon_stock.png"
                           WidthRequest="48"
                           HeightRequest="48"
                           HorizontalOptions="Center"/>
                    <Label Text="Stock Produits"
                           FontAttributes="Bold"
                           FontSize="Medium"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </VerticalStackLayout>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapStockPage" />
                </Border.GestureRecognizers>
            </Border>

            <!-- Carte Utilisateurs -->
            <Border
                BackgroundColor="{AppThemeBinding Light={DynamicResource LightSecondaryColor-200}, Dark={DynamicResource DarkSecondaryColor-200}}"
                Stroke="{AppThemeBinding Light={DynamicResource LightSecondaryColor-100}, Dark={DynamicResource DarkSecondaryColor-300}}"
                x:Name="UsersCard"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 16"
                Padding="20"
                WidthRequest="250"
                HeightRequest="150"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <VerticalStackLayout Spacing="8"
                                     HorizontalOptions="Center"
                                     VerticalOptions="CenterAndExpand">
                    <Image Source="icon_users.png"
                           WidthRequest="48"
                           HeightRequest="48"
                           HorizontalOptions="Center"/>
                    <Label Text="Utilisateurs"
                           FontAttributes="Bold"
                           FontSize="Medium"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </VerticalStackLayout>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapUsersPage" />
                </Border.GestureRecognizers>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

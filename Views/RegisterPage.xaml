<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockApp.Views.RegisterPage"
             Title="Créer un compte">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Entry Placeholder="Pseudo" Text="{Binding Username}" />
            <Entry Placeholder="Mot de passe" IsPassword="True" Text="{Binding Password}" />
            <Entry Placeholder="Confirmer mot de passe" IsPassword="True" Text="{Binding Password2}" />

            <Label Text="{Binding Error}" TextColor="Red" IsVisible="{Binding Error, Converter={StaticResource StringNotEmptyConverter}}" />

            <Button Text="Créer le compte" Command="{Binding RegisterCommand}" />
            <Button Text="Retour" Command="{Binding BackToLoginCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
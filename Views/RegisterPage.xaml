<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockApp.Views.RegisterPage"
             Title="Créer un compte"
             BackgroundColor="#F7F8FA">

    <ScrollView>
        <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

            <Label Text="Créer un compte"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#222"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>

            <!-- Bloc inscription -->
            <Frame BackgroundColor="White"
                   CornerRadius="12"
                   Padding="20"
                   HasShadow="True"
                   WidthRequest="300">

                <VerticalStackLayout Spacing="16">

                    <!-- Pseudo -->
                    <Frame BackgroundColor="#F2F2F2" Padding="10" CornerRadius="8">
                        <Entry Placeholder="Pseudo"
                               Text="{Binding Username}"
                               BackgroundColor="Transparent"
                               TextColor="#111" />
                    </Frame>

                    <!-- Mot de passe -->
                    <Frame BackgroundColor="#F2F2F2" Padding="10" CornerRadius="8">
                        <Entry Placeholder="Mot de passe"
                               IsPassword="True"
                               Text="{Binding Password}"
                               BackgroundColor="Transparent"
                               TextColor="#111" />
                    </Frame>

                    <!-- Confirmer mot de passe -->
                    <Frame BackgroundColor="#F2F2F2" Padding="10" CornerRadius="8">
                        <Entry Placeholder="Confirmer mot de passe"
                               IsPassword="True"
                               Text="{Binding Password2}"
                               BackgroundColor="Transparent"
                               TextColor="#111" />
                    </Frame>

                    <!-- Message d'erreur -->
                    <Label Text="{Binding Error}"
                           TextColor="Red"
                           IsVisible="{Binding Error, Converter={StaticResource StringNotEmptyConverter}}"
                           FontSize="14"
                           HorizontalOptions="Center" />

                    <!-- Boutons -->
                    <VerticalStackLayout Spacing="12">

                        <Button Text="Créer le compte"
                                BackgroundColor="#0078D7"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="45"
                                Command="{Binding RegisterCommand}" />

                        <Button Text="Retour"
                                BackgroundColor="#AAAAAA"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="45"
                                Command="{Binding BackToLoginCommand}" />

                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

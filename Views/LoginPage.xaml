<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockApp.Views.LoginPage"
             Title="Connexion"
             BackgroundColor="{AppThemeBinding Light={DynamicResource LightBackgroundColor50}, Dark={DynamicResource Black}}">
    <ContentPage.Resources>
        <Style x:Key="labelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource DarkTextColor100}, Dark={DynamicResource LightTextColor100}}"/>
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

            <Label Text="Bienvenue dans votre application gestion de stock"
                   FontSize="25"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light={DynamicResource LightTextColor900}, Dark={DynamicResource DarkTextColor900}}"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>

            <!-- Bloc connexion -->
            <Border 
                   Padding="20"
                   WidthRequest="300"
                   BackgroundColor="{AppThemeBinding Light={DynamicResource LightBackgroundColor100}, Dark={DynamicResource DarkBackgroundColor50}}">

                <VerticalStackLayout Spacing="16">
                    <!-- Pseudo -->
                    <Border>
                        <Entry Placeholder="Pseudo"
                               Text="{Binding Username}"
                               BackgroundColor="{AppThemeBinding Light={DynamicResource LightAccentColor100}, Dark={DynamicResource DarkAccentColor900}}"
                               TextColor="{AppThemeBinding Light={DynamicResource LightTextColor100}, Dark={DynamicResource DarkTextColor900}}"
                               PlaceholderColor="{AppThemeBinding Light={DynamicResource LightTextColor900}, Dark={DynamicResource DarkTextColor400}}"
                               />
                    </Border>

                    <!-- Mot de passe -->
                    <Border>
                        <Entry Placeholder="Mot de passe"
                               IsPassword="True"
                               Text="{Binding Password}"
                               BackgroundColor="{AppThemeBinding Light={DynamicResource LightAccentColor100}, Dark={DynamicResource DarkAccentColor900}}"
                               TextColor="{AppThemeBinding Light={DynamicResource LightTextColor100}, Dark={DynamicResource DarkTextColor900}}"
                               PlaceholderColor="{AppThemeBinding Light={DynamicResource LightTextColor900}, Dark={DynamicResource DarkTextColor400}}"
                               />
                    </Border>

                    <!-- Message d'erreur -->
                    <Label Text="{Binding Error}"
                           TextColor="Red"
                           IsVisible="{Binding Error, Converter={StaticResource StringNotEmptyConverter}}"
                           FontSize="14"
                           HorizontalOptions="Center" />

                    <!-- Boutons -->
                    <VerticalStackLayout Spacing="12">

                        <Button Text="Se connecter"
                                
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="45"
                                Command="{Binding LoginCommand}" 
                                BackgroundColor="{AppThemeBinding Light={DynamicResource LightAccentColor700}, Dark={DynamicResource DarkAccentColor700}}"/>

                        <Button Text="S'inscrire"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="45"
                                Command="{Binding GoRegisterCommand}"
                                BackgroundColor="{AppThemeBinding Light={DynamicResource LightBackgroundColor900}, Dark={DynamicResource DarkSecondaryColor900}}"/>

                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
